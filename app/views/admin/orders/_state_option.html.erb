<div style="padding: 10px; float: right;">
  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to("取消订单", "#") %>
  <% when "paid" %>
    <%= link_to("出货", ship_admin_order_path(order), method: :post, class: "btn btn-default btn-sm") %>
    <%= link_to("取消订单", "#") %>
  <% when "shipping" %>
    <%= link_to("设定为已出货", deliver_admin_order_path(order), method: :post, class: "btn btn-default btn-sm") %>
  <% when "shipped" %>
    <%= link_to("申请退货", return_admin_order_path(order), method: :post, class: "btn btn-default btn-sm") %>
  <% when "good_returned" %>
    <span>已退货</span>
  <% when "order_canceled" %>
    <span>订单已取消</span>
  <% end %>
</div>
