<div class="row">
  <div class="col-md-12">
    <h2>订单明细(<%= render_order_state(@order) %>)</h2>
    <%= render "admin/orders/state_option", order: @order %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th width="80%">商品明细</th>
          <th>单价</th>
          <th>数量</th>
        </tr>
      </thead>
      <tbody>
        <% @product_lists.each do |product_list| %>
          <tr>
            <td><%= product_list.product_name %></td>
            <td><%= product_list.product_price %></td>
            <td><%= product_list.quantity %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <span class="pull-right">
      总计 <%= render_cart_total_price(current_cart) %> RMB
    </span>
    <hr>
    <h2>寄送资讯</h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>订购人</td>
        </tr>
        <tr>
          <td><%= @order.billing_name %></td>
        </tr>
        <tr>
          <td>收货人</td>
        </tr>
        <tr>
          <td><%= @order.shipping_name %></td>
        </tr>
      </thead>
    </table>
  </div>
</div>
