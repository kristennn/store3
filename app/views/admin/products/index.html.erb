<div class="row">
  <div class="col-md-12">
    <h2>Product List</h2>
    <%= link_to("新增商品", new_admin_product_path, class: "btn btn-primary pull-right") %><br><br>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Price</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.title %></td>
            <td><%= product.price %></td>
            <td>
              <%= link_to("Edit", edit_admin_product_path(product)) %> |
              <%= link_to("Delete", admin_product_path(product), method: :delete, data: {confirm: "Are you sure?"}) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
