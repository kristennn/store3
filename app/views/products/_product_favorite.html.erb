<% if @product.is_favorited?(current_user) %>
  <p>已收藏</p>
  <%= link_to("Quit favorite", quit_favorite_product_path(@product), remote: :true, method: :post, class: "fa fa-heart") %>
<% else %>
  <%= link_to("Join favorite", join_favorite_product_path(@product), remote: :true, method: :post, class: "fa fa-heart") %>
<% end %>
