<div class="row">
  <div class="col-md-12">
    <h2>购物车</h2>
    <%= link_to("清空购物车", clean_carts_path, method: :delete, class: "pull-right", data: {confirm: "你确定要清空整个购物车吗？"}) %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">商品资讯</th>
          <th>单价</th>
          <th>数量</th>
          <th>操作选项</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= link_to product_path(cart_item.product) do %>
                <% if cart_item.product.image.present? %>
                  <%= image_tag(cart_item.product.image.thumb.url, class: "thumbnail") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail") %>
                <% end %>
              <% end %>
            </td>
            <td><%= link_to(cart_item.product.title, product_path(cart_item.product)) %></td>
            <td><%= cart_item.product.price %></td>
            <td><%= cart_item.product.quantity %></td>
            <td><%= link_to("删除", cart_item_path(cart_item.product_id), method: :delete, data: {confirm: "你确定要删除此商品吗？"}) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <span class="pull-right">总计 XXX RMB</span>
  </div>
</div>
<br>
<%= link_to("确认结账", "#",class: "btn btn-lg btn-danger pull-right") %>
